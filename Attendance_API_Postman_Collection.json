  "item": [
    {
      "name": "Setup",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Check if API is running"
          }
        },
        {
          "name": "Root Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            },
            "description": "Get request information"
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"student_id\": \"2024-001\",\n  \"email\": \"student@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"username\": \"student_username\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"middle_name\": \"M\",\n  \"course\": \"Computer Science\",\n  \"year_level\": \"3\",\n  \"section\": \"A\",\n  \"department\": \"Engineering\",\n  \"college\": \"College of Engineering\",\n  \"contact_number\": \"09123456789\",\n  \"address\": \"123 Main Street\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": ["{{base_url}}"],
              "path": ["register"]
            },
            "description": "Register a new user account"
          }
        },
        {
          "name": "2. Verify Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\",\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/verify",
              "host": ["{{base_url}}"],
              "path": ["verify"]
            },
            "description": "Verify email with code sent to email"
          }
        },
        {
          "name": "3. Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"student_id\": \"2024-001\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            },
            "description": "Login with student ID/email and password"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"access_token\", jsonData.access_token);",
                  "    pm.environment.set(\"user_role\", jsonData.role);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "4. Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"your_refresh_token_here\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/refresh-token",
              "host": ["{{base_url}}"],
              "path": ["refresh-token"]
            },
            "description": "Refresh expired access token"
          }
        },
        {
          "name": "5. Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/forgot-password",
              "host": ["{{base_url}}"],
              "path": ["forgot-password"]
            },
            "description": "Request password reset code"
          }
        },
        {
          "name": "6. Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\",\n  \"code\": \"123456\",\n  \"new_password\": \"NewSecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/reset-password",
              "host": ["{{base_url}}"],
              "path": ["reset-password"]
            },
            "description": "Reset password with verification code"
          }
        },
        {
          "name": "7. Resend Reset Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/resend-reset-code",
              "host": ["{{base_url}}"],
              "path": ["resend-reset-code"]
            },
            "description": "Resend password reset code"
          }
        }
      ]
    },
